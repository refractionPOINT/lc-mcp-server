{
  "mcpServers": {
    "limacharlie-all": {
      "command": "python3",
      "args": ["/path/to/lc-mcp-server/server.py"],
      "env": {
        "PUBLIC_MODE": "false",
        "MCP_PROFILE": "all",
        "GOOGLE_API_KEY": "<YOUR_GOOGLE_API_KEY>",
        "LC_OID": "<YOUR_ORGANIZATION_ID>",
        "LC_API_KEY": "<YOUR_LIMACHARLIE_API_KEY>",
        "GCS_BUCKET_NAME": "<OPTIONAL_YOUR_GCS_BUCKET>",
        "GCS_SIGNER_SERVICE_ACCOUNT": "<OPTIONAL_YOUR_GCS_SERVICE_ACCOUNT>"
      }
    },
    "limacharlie-historical": {
      "command": "python3",
      "args": ["/path/to/lc-mcp-server/server.py"],
      "env": {
        "PUBLIC_MODE": "false",
        "MCP_PROFILE": "historical_data",
        "GOOGLE_API_KEY": "<YOUR_GOOGLE_API_KEY>",
        "LC_OID": "<YOUR_ORGANIZATION_ID>",
        "LC_API_KEY": "<YOUR_LIMACHARLIE_API_KEY>"
      }
    },
    "limacharlie-live": {
      "command": "python3",
      "args": ["/path/to/lc-mcp-server/server.py"],
      "env": {
        "PUBLIC_MODE": "false",
        "MCP_PROFILE": "live_investigation",
        "LC_OID": "<YOUR_ORGANIZATION_ID>",
        "LC_API_KEY": "<YOUR_LIMACHARLIE_API_KEY>"
      }
    },
    "limacharlie-detections": {
      "command": "python3",
      "args": ["/path/to/lc-mcp-server/server.py"],
      "env": {
        "PUBLIC_MODE": "false",
